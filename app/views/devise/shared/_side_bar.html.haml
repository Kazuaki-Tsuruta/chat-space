.left-side
  .left-side-top
    .left-side-top__box
      %h3.left-side-top__box__name
        = current_user.name
      %ul.left-side-top__box__menu
        %li.left-side-top__box__newgroup
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon', style: "color: white"
        %li.left-side-top__box__edituser
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon', style: "color: white"
  .left-side-main
    - current_user.groups.each do |group|
      .left-side-main__group     
        %p.left-side-main__group__name
          = link_to group.name, "/groups/#{group.id}/messages", style: "color: white"
        %p.left-side-main__group__comment 
          = link_to group.show_last_message, "/groups/#{group.id}/messages", style: "color: white"
