.left-side
  .left-side-top
    .left-side-top__box
      %h3.left-side-top__box__name
        = current_user.name
      %ul.left-side-top__box__menu
        %li.left-side-top__box__newgroup
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %li.left-side-top__box__edituser
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
  .left-side-main
    - current_user.groups.each do |group|
      .left-side-main__group     
        %p.left-side-main__group__name
          = group.name 
        %p.left-side-main__group__comment 
          = group.show_last_message



